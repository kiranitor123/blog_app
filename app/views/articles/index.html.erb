<%= render 'header' %>

<div class="card mb-3 m-4 mx-auto article">
  <p id="notice"><%= notice %></p>
  <% @articles.each do |article| %> 
  <div class="row g-0">
    <div class="col-md-4 p-3 img-center">
      <img src="./micro2.jpg" class="img-fluid" alt="author_image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <div class="card text-dark bg-light">
          <div class="card-header">
            Author: <%= article.author %>
          </div>
          
          <div class="card-body">
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.content %></p>
            <div class="like_dislike d-flex justify-content-between">
              <a href="#" class="like-dislike">
                <i class="fa fa-thumbs-o-up like" aria-hidden="true"><%= article.likes %></i>
              </a>
              <a href="#" class="like-dislike">
                <i class="fa fa-thumbs-down m-2 dislike" aria-hidden="true"><%= article.dislikes %></i>
              </a>
              <%= link_to 'Edit', edit_article_path(article) %>

              <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
        <div class="card-header">
            <%= article.updated_at %>
          </div>
      </div>
    </div>
  </div>
  <%end%>
</div>
