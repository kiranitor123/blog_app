<p id="notice"><%= notice %></p>

<div class="heading d-flex ">
<img class="mt-3" src="/micro2.jpg" width="125px" height="130px" alt="author_image">
<div class="app_name text-bold">
<h1 class="m-4 ">Blog App</h1>
<h2 class="m-4">Microverse</h2>
</div>

<div class="justify-content">
<button type="button" class="btn btn-success mt-6">Create New Article</button>
</div>
</div>

<div class="card mb-3 m-4" style="max-width: 670px;">
    <div class="row g-0">
        <div class="col-md-4">
          <img src="/emmy.jpg" width="225px" height="230px" alt="author_image">
        </div>
     <div class="col-md-8">
        <div class="card-body">
    <div class="card text-dark bg-light mb-3" style="max-width: 25rem;">
    <div class="card-header">
    <% @articles.each do |article| %>
    Author: <%= article.author %>
    </div>
    <div class="card-body">
        <h5 class="card-title">Please share your Article</h5>
        <h6 class="card-title">
        Title: <%= article.title %></h6>
        <h6 class="card-title">Content: <%= article.content %></h6>
        <p class="card-text">"Don’t let imposter syndrome keep you from getting what’s yours. Use “I feel” a lot instead of, “I think that”."</p>
        <div class="like_dislike">
        <a href="#" class="like-dislike">
        <i class="fa fa-thumbs-o-up like" aria-hidden="true"><%= article.likes %></i>
        </a>
        <a href="#" class="like-dislike">
        <i class="fa fa-thumbs-down m-2 dislike" aria-hidden="true"><%= article.dislikes %></i>
        </a>
        </div>
    </div>
    <%end%>
      </div>
    </div>
</div>

<table class="m-4">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Content</th>
      <th>Likes</th>
      <th>Dislikes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.author %></td>
        <td><%= article.content %></td>
        <td><%= article.likes %></td>
        <td><%= article.dislikes %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

